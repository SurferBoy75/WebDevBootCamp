<% layout('layouts/boilerplate') %>
    <div class="row text-white">
        <h1 class="text-center">Create a New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Campground Title: </label>
                    <input class="form-control" id="title" type="text" name="campground[title]" placeholder="campground name" required>
                    <div class="valid-feedback">
                        Fuckin' A Dude!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Campground Location: </label>
                    <input class="form-control" id="location" type="text" name="campground[location]" placeholder="Address" required>
                    <div class="valid-feedback">
                        Fuckin' A Dude!
                    </div>
                </div>
                <div>
                    <label class="form-label" for="price">Price</label>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input id="price" name="campground[price]" type="number" class="form-control" min="10" max="110" aria-label="Amount (to the nearest dollar)" required>
                    <span class="input-group-text">.00</span>
                    <div class="valid-feedback">
                        Fuckin' A Dude!
                    </div>
                  </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Campground Description: </label>
                    <textarea class="form-control" id="description" name="campground[description]" rows="3" cols="50"
                        placeholder="Tell us something about this camp?" required></textarea>
                        <div class="valid-feedback">
                            Fuckin' A Dude!
                        </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Campground Photo:</label>
                    <input id="image" type="file" name="image" class="form-control" multiple>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>